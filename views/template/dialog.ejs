<div id="editModal" class="modal">
  <!-- Modal content -->
  <div class="editModal-content">
    <span class="close" onclick="closeEdit()">&times;</span>
    <form action="/users/<%=user.user_id%>" method="POST" enctype="multipart/form-data">
      <div class="dialog-header">
        <div class="dialog-title">Chỉnh sửa trang cá nhân</div>
      </div>
      <hr/>
      <div class="dialog-body">
        <div class="inf-avatar">
          <div class="avatar">
            <img class="avatar-edit" id="avatar_change" src="<%=user.avatar%>" alt="" />
          </div>
          <label class="addAva" id="addAVA">
            <input type="file" accept="image/*" name="avatar_change" id="file_avatar" onchange="changeAvatar(event)">
          </label>
        </div>
        <div class="inf-profile">
          <div class="acc-fname">
            <div style="flex-grow: 1;">
              Tên tài khoản:&emsp;<input type="text" name="user_id" value="<%=user.user_id%>" readonly />
            </div>
            <div style="flex-grow: 1;">
              Họ tên:&emsp;<input name="fullname" type="text" value="<%=user.fullname%>" />
            </div>
          </div>
          <div class="class-dob">
            <div style="flex-grow: 1;">
              Mã lớp:&emsp;<input type="text" name="class_id" value="<%=user.class_id%>" />
            </div>
            <div style="flex-grow: 1;">
              Ngày sinh:&emsp;<input type="date" class="birthday" name="birthday" value="2000-07-02" />
            </div>
          </div>
          <div class="gender-div">
            <label>Giới tính:&emsp;</label>
            <input type="radio" id="male" name="gender" checked="checked" value="1" />
            <label for="male"> &emsp;Nam &emsp;&emsp;&emsp;</label>
            <input type="radio" id="female" name="gender" value="0" />
            <label for="female">&emsp;Nữ &emsp;&emsp;&emsp;</label>
            <input type="radio" id="other" name="gender" value="0" />
            <label for="other">&emsp;Khác &emsp;</label>
          </div>
          <div class="home-status">
            <div style="flex-grow: 1;">
              Quê quán:&emsp;<input type="text" name="hometown" value="<%=user.hometown%>" class="txtHometown" />
            </div>
            <div style="flex-grow: 1;">
              Tình trạng:&emsp;<select name="status" id="relation-select">
                <option value="0">Độc thân</option>
                <option value="1">Đang trong mối quan hệ</option>
                <option value="2">Đã kết hôn</option>
              </select>
            </div>

          </div>
        </div>
      </div>
      <div class="dialog-footer">
        <button class="savebtn" id="btnSave" type="submit">Lưu sự thay đổi</button>
      </div>
    </form>
  </div>
</div>