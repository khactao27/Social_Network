
    <div class="avatar-profile">
      <div class="avatar">
        <img class="avatar-image" src="<%=user.avatar%>" alt="Ảnh đại diện" />
      </div>
      <div class="profile">
        <div class="id-editbtn">
          <div class="id-name"><%=user.user_id%></div>
          <% if(user.user_id !== user_curr.user_id) {%>
          <div id="inbox-btn" onclick="Chat(this)" class="btn-inbox" style="visibility: visible">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-chat" viewBox="0 0 16 16">
              <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"/>
            </svg>
          </div>
          <% if(checkfollow == 0){ %>
          <button id="follow-btn" name="<%=user.user_id%>" style="background: rgb(253, 253, 253);" value="0" onclick="Follow(this)" class="btnfollow" style="visibility: visible">
            Theo dõi
          </button>
          <% } else { %>
            <button id="follow-btn" name="<%=user.user_id%>" style="background: #beb3f3;" value="1" onclick="Follow(this)" class="btnfollow" style="visibility: visible">
              Đang theo dõi
            </button>
          <% } }else {%>
            <img src="/images/settings.svg" id="btn-edit-profile" onclick="openEditProfile()" class="edit-profile"/>
          <% } %> 
        </div>
        <div class="fullname-class">
          <div class="fullname"><%=user.fullname%></div>
          <div class="className"><%=user.class_id%></div>
        </div>
        <div class="dob-gender">
          <div class="dob">Năm sinh: <%=user.birthday.getFullYear()%></div>
          <% if(user.gender == 1) { %>
          <div class="gender">Giới tính: Nam</div>
          <% } else { %>
          <div class="gender">Giới tính: Nữ</div> 
          <% } %>
        </div>
        <div class="hometown-relation">
          <div class="hometown">Quê quán: <%=user.hometown%></div>
          <% if(user.status == 0) { %>
          <div class="relation">Tình trạng: Độc thân</div>
          <% } else if(user.status == 1) {%>
            <div class="relation">Tình trạng: Hẹn hò</div>
          <% } else { %>
            <div class="relation">Tình trạng: Đã kết hôn</div>
          <% } %>
        </div>
        <div class="follow">
          <div class="followed" id="num-follower"><%=user.followers%> người theo dõi</div>
          <div class="be-followed">Đang theo dõi 3 người</div>
        </div>
      </div>
    </div>

  