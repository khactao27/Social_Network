<div class="article">
    <div class="article-header">
        <img src="<%=post.avatar%>" class="avatar-header" alt="avatar" style="flex-grow: 1;">
        <a href="/users/<%=post.user_id%>" style="margin-left: 2%;flex-grow: 1;"><b>
                <%=post.user_id%>
            </b></a>
        <div style="flex-grow: 1200;"></div>
        <div class="popup" style="flex-grow: 1;" class="notification">
            <img src="/icons/options.png" style="width: 20px;height: 20px;flex-grow: 1;cursor: pointer;" onclick="openOptions(this)" alt="options">
            <span class="options">
                <% if(user.user_id == post.user_id){ %>
                    <div style="display:flex;flex-direction: row;align-items: center; padding-left: 10%;" name="<%=post.post_id%>" onclick="deletePost(this)"><img src="/icons/delete.png" style="width: 20px;height: 20px;margin-right: 5%;" alt="delete">Xóa bài</div>
                    <div style="display:flex;flex-direction: row;align-items: center;padding-left: 10%;margin-top: 3%;" onclick="editPost(this)"><img src="/icons/edit.png" style="width: 20px;height: 20px;margin-right: 5%;" alt="delete">Sửa bài</div>
                    <%-include('./editpost.ejs', {user: user, post: post})%>
                    <div style="display:flex;flex-direction: row;align-items: center;padding-left: 10%;margin-top: 3%;"><img src="/icons/share.png" style="width: 20px;height: 20px;margin-right: 5%;" alt="delete">Chia sẻ</div>
                <%} else { %>
                    <div style="display:flex;flex-direction: row;align-items: center;padding-left: 10%;"><img src="/icons/share.png" style="width: 20px;height: 20px;margin-right: 5%;" alt="delete">Chia sẻ</div>
                <% } %>
            </span>
        </div>
    </div>
    <div class="images">
        <img class="image-item" src="<%=post.img_url%>" alt="image-status">
    </div>
    <div class="reacts-icons">
        <%if(arrLoves.includes(post.post_id)) { %>
            <svg fill="#ed4956" name="<%=post.post_id%>" class="btn-like" onclick="React(this)" height="24" viewBox="0 0 48 48"
                width="24">
